<?xml version="1.0" encoding="UTF-8" ?>
<mythlocale>
  <!-- Global Settings -->
    <!-- EIT, Subtitle, Audio Stream Language Preferences -->
    <setting name="ISO639Language0" global="true">fre</setting>
    <setting name="ISO639Language1" global="true">fre</setting>

    <!-- Recording -->
    <setting name="TVFormat" global="true">NTSC</setting>
    <setting name="VbiFormat" global="true">NTSC Closed Caption</setting>
    <setting name="FreqTable" global="true">us-bcast</setting>

    <!-- Scheduling -->

    <!-- Advert Detection -->


  <!-- Per-host Settings -->
    <!-- Languages - Self Explanatory -->
    <setting name="Language">fr</setting>

    <!-- Country -->
    <setting name="Country">CA</setting>

    <!-- Date/Time format -->
    <setting name="DateFormat">dddd d MMM</setting>
    <setting name="TimeFormat">h:mm</setting>
    <setting name="ShortDateFormat">dd/MM</setting>

    <!-- Playback -->

  <!-- Plugins -->
    <!-- MythArchive -->
    <setting name="MythArchiveDateFormat">%a %d %b %Y</setting>
    <setting name="MythArchiveTimeFormat">%H:%M</setting>
    <setting name="MythArchiveVideoFormat">NTSC</setting>

    <!-- MythWelcome  -->
     <setting name="MythWelcomeDateFormat">dddd\\ndd MMM yyyy</setting>

    <!-- MythZoneMinder  -->
    <setting name="ZoneMinderDateFormat">"ddd dd MMM yyyy</setting>
    <setting name="ZoneMinderTimeFormat">hh:mm</setting>
</mythlocale>
